

<%= form_for([@movie, @reviews]) do |f| %>
<%= render "shared/errors", object: @reviews %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>         
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required stars">
        <%= f.label :stars %>  
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>      
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= f.submit creadit + ' Review' %> 
      <%= link_to "Cancel", creadit2, class: 'button' %>
    </p>
  </fieldset>
<% end %>