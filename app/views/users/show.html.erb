<article id="user">
  <header>
    <h1><%= @users.name  %></h1>
    <h2><%= mail_to(@users.email) %></h2>
    <h3>Member Since</h3>
    <p>
    <%= @users.created_at.strftime("%B %Y") %>
    </p>
  </header>

<footer>
   <nav>
      <% if current_user?(@users) || logged_admin? %>
      <%= link_to 'Edit Account', edit_user_path(@users),
         class: 'button' %>

      <%= link_to 'Delete Account', @users, 
         class: 'button',
         method: :delete, data: { confirm: 
         'Are you sure you want to delete your account? I am so sad to see you go' } %>
      <% end %>

   </nav>
  </footer>

</article>
