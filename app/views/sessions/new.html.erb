<header id="content-header">
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
<fieldset>
    <ol>
      <li class="required">
        <%= label_tag :usermail, 'Username or Email'%>
        <%= text_field_tag :usermail, nil, size: 40, autofocus: true, required: true   %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true %>
      </li>
    </ol>
  <p>
    <%= submit_tag 'Sign In' %>
  </p>
  <p>
  	No account yet? <%= link_to 'Sign up!', signup_path %> It's easay, free, and delicious.
  </p>
</fieldset>
<% end %>